---
import ShopItems from '../components/shop-items.astro';
import { Cart } from '../components/cart';
import Layout from '../layouts/page.astro';
---

<Layout>
	<div class="shop">
		<h1>Shop sandwich kits.</h1>

		<noscript>
			<p>
				JS is required to purchase through this website. To order by phone call <a
					href="tel:12484345508">+1 248-434-5508</a
				>
			</p>
		</noscript>

		<div class="wrapper">
			<ShopItems />
			<Cart client:only="solid-js" />
		</div>
	</div>
</Layout>

<style>
	.shop {
		padding: 3rem 5%;
	}

	.wrapper {
		align-items: flex-start;
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr 260px;
		position: relative;
	}
</style>
